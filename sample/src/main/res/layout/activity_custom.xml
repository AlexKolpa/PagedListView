<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<com.github.alexkolpa.pagedlistview.PagedListView
		android:id="@+id/paged_listview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		/>

	<ProgressBar
		android:id="@+id/loading_view"
		android:layout_width="@dimen/custom_progress_size"
		android:layout_height="@dimen/custom_progress_size"
		android:layout_marginRight="@dimen/spacing_default"
		android:layout_marginEnd="@dimen/spacing_default"
		android:layout_marginBottom="@dimen/spacing_default"
		android:layout_gravity="bottom|end"
		/>
</FrameLayout>